<Window x:Class="DoAnWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        xmlns:local="clr-namespace:DoAnWPF"
        mc:Ignorable="d"
        Title="Quản lý bán hàng" >

    <Window.Resources>
        <!-- Style chung cho Sidebar Button -->
        <Style x:Key="SidebarButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="8" Padding="10" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <DockPanel>
        <!-- Sidebar -->
        <StackPanel DockPanel.Dock="Left" Background="#2C3E50" Width="200" >

            <!-- Nút Thanh Toán -->
            <Button x:Name="BtnThanhToan" Style="{StaticResource SidebarButton}" Click="BtnThanhToan_Click">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left">
                    <fa:ImageAwesome Icon="Television" Width="24" Height="24" Margin="0,0,10,0" Foreground="White"/>
                    <TextBlock Text="Thanh Toán" VerticalAlignment="Center" Foreground="White" FontSize="14"/>
                </StackPanel>
            </Button>

            <!-- Nút Sản phẩm -->
            <Button x:Name="BtnSanPham" Style="{StaticResource SidebarButton}" Click="BtnSanPham_Click">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left">
                    <fa:ImageAwesome Icon="Cube" Width="24" Height="24" Margin="0,0,10,0" Foreground="White"/>
                    <TextBlock Text="Sản phẩm" VerticalAlignment="Center" Foreground="White" FontSize="14"/>
                </StackPanel>
            </Button>

            <!-- Nút Loại sản phẩm -->
            <Button x:Name="BtnLoaiSanPham" Style="{StaticResource SidebarButton}" >
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left">
                    <fa:ImageAwesome Icon="Tag" Width="24" Height="24" Margin="0,0,10,0" Foreground="White"/>
                    <TextBlock Text="Loại sản phẩm" VerticalAlignment="Center" Foreground="White" FontSize="14"/>
                </StackPanel>
            </Button>

            <!-- Nút Đơn vị đo -->
            <Button x:Name="BtnDonViDo" Style="{StaticResource SidebarButton}">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left">
                    <fa:ImageAwesome Icon="BalanceScale" Width="24" Height="24" Margin="0,0,10,0" Foreground="White"/>
                    <TextBlock Text="Đơn vị đo" VerticalAlignment="Center" Foreground="White" FontSize="14"/>
                </StackPanel>
            </Button>

            <!-- Nút Khách hàng -->
            <Button x:Name="BtnKhachHang" Style="{StaticResource SidebarButton}" >
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left">
                    <fa:ImageAwesome Icon="Users" Width="24" Height="24" Margin="0,0,10,0" Foreground="White"/>
                    <TextBlock Text="Khách hàng" VerticalAlignment="Center" Foreground="White" FontSize="14"/>
                </StackPanel>
            </Button>

            <!-- Nút Hóa đơn -->
            <Button x:Name="BtnHoaDon" Style="{StaticResource SidebarButton}" >
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left">
                    <fa:ImageAwesome Icon="File" Width="24" Height="24" Margin="0,0,10,0" Foreground="White"/>
                    <TextBlock Text="Hóa đơn" VerticalAlignment="Center" Foreground="White" FontSize="14"/>
                </StackPanel>
            </Button>
        </StackPanel>

        <!-- Vùng nội dung chính -->
        <ContentControl x:Name="MainContent" Background="White"/>
    </DockPanel>
</Window>
